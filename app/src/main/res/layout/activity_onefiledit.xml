<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    tools:context="com.theonlylies.musictagger.activities.OneFileEditActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false"
            app:toolbarId="@id/toolbar">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="28dp"
                android:fitsSystemWindows="true"
                app:cardElevation="12dp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="1.0">

                <ImageView
                    android:id="@+id/artwortImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:onClick="onClick"
                    app:layout_collapseMode="parallax" />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="top"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay" />


        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/activity_onefileedit_content" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="85dp"
        app:menu_colorNormal="@color/fabBackColor"
        app:menu_colorPressed="@color/fabBackColorPressed"
        android:elevation="4dp"
        app:layout_anchor="@id/app_bar"
        app:layout_anchorGravity="bottom|end"
        app:menu_animationDelayPerItem="15"
        app:menu_fab_size="normal"
        app:menu_icon="@drawable/ic_plus"
        app:menu_openDirection="down"
        app:menu_showShadow="false">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabChooseArtworkFromGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:src="@drawable/ic_gallery_search"
            app:fab_colorNormal="@color/fabBackColor"
            app:fab_colorPressed="@color/fabBackColor"
            app:fab_label="Choose from gallery"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabChooseArtworkFromInternet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:src="@drawable/ic_internet_search"
            app:fab_colorNormal="@color/fabBackColor"
            app:fab_colorPressed="@color/fabBackColor"
            app:fab_label="Choose from internet"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabDeleteArtwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:src="@drawable/ic_delete_black"
            app:fab_colorNormal="@color/fabBackColor"
            app:fab_colorPressed="@color/fabBackColor"
            app:fab_label="Delete art"
            app:fab_size="mini" />


    </com.github.clans.fab.FloatingActionMenu>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fabSmartSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:elevation="4dp"
        app:layout_anchor="@id/app_bar"
        app:layout_anchorGravity="bottom|end"
        app:menu_animationDelayPerItem="15"
        app:menu_colorNormal="@color/fabBackColor"
        app:menu_colorPressed="@color/fabBackColorPressed"
        app:menu_fab_size="normal"
        app:menu_icon="@drawable/ic_smart_search"
        app:menu_openDirection="down"
        app:menu_showShadow="false">

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/fabBackColor"
            app:fab_colorPressed="@color/fabBackColor"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/fabBackColor"
            app:fab_colorPressed="@color/fabBackColor"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/fabBackColor"
            app:fab_colorPressed="@color/fabBackColor"
            app:fab_size="mini" />


    </com.github.clans.fab.FloatingActionMenu>


    <!-- Its player button !!! -->

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fabPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:elevation="4dp"
        app:layout_anchor="@id/app_bar"
        app:layout_anchorGravity="bottom|start"
        app:menu_animationDelayPerItem="15"
        app:menu_colorNormal="@color/fabBackColor"
        app:menu_colorPressed="@color/fabBackColorPressed"
        app:menu_fab_size="normal"

        app:menu_openDirection="down"
        app:menu_showShadow="false">

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/fabBackColor"
            app:fab_colorPressed="@color/fabBackColor"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/fabBackColor"
            app:fab_colorPressed="@color/fabBackColor"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/fabBackColor"
            app:fab_colorPressed="@color/fabBackColor"
            app:fab_size="mini" />


    </com.github.clans.fab.FloatingActionMenu>


</android.support.design.widget.CoordinatorLayout>
