<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/card_item_simple"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@color/colorBackItemSimple"
    app:cardElevation="4dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="84dp">

        <ImageView
            android:id="@+id/artworkImageView"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp" />

        <TextView
            android:id="@+id/itemSimpleTrNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/artworkImageView" />

        <TextView
            android:id="@+id/trackArtistAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemSimpleTrNum"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/artworkImageView" />

    </RelativeLayout>

</android.support.v7.widget.CardView>